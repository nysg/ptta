{
  "name": "@nysg/ptta",
  "version": "0.2.4",
  "description": "AI-first task management CLI - External memory storage for Claude Code",
  "bin": {
    "ptta": "bin/ptta.js"
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "!dist/**/*.test.*",
    "bin",
    "!web/client/dist/.gitignore",
    "web/client/dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "web:dev": "tsx watch src/web.ts",
    "web:install": "cd web/client && npm install",
    "web:build": "cd web/client && npm run build",
    "build:all": "npm run build && npm run web:install && npm run web:build",
    "prepublishOnly": "npm run build:all"
  },
  "keywords": [
    "cli",
    "todo",
    "task",
    "project",
    "ai",
    "claude",
    "productivity"
  ],
  "author": "nysg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nysg/ptta.git"
  },
  "bugs": {
    "url": "https://github.com/nysg/ptta/issues"
  },
  "homepage": "https://github.com/nysg/ptta#readme",
  "dependencies": {
    "@hono/node-server": "^1.5.0",
    "better-sqlite3": "^9.2.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "hono": "^4.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@vitest/ui": "^4.0.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
